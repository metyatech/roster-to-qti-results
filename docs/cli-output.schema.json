{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "roster-to-qti-results CLI output",
  "type": "object",
  "additionalProperties": false,
  "required": ["mode", "outputDir", "outputs"],
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["write", "dry-run"]
    },
    "outputDir": {
      "type": "string",
      "minLength": 1
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["resultId", "path"],
        "properties": {
          "resultId": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}